<IfModule mod_rewrite.c>
    RewriteEngine On
    # Block access to .git directory
    RewriteRule ^\.git - [F,L]
    # Block access to core directory
    RewriteRule ^core/ - [F,L]
</IfModule>

# Block access to sensitive files
<FilesMatch "^\.env|composer\.json|composer\.lock|package\.json|package-lock\.json|\.gitignore|GEMINI\.md|changelog\.md">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Prevent directory listing
# If this causes 500 error, comment it out
<IfModule mod_autoindex.c>
    Options -Indexes
</IfModule>
